<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        >

        <ImageView
            android:id="@+id/imageArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/textArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Artista: "
            android:layout_toRightOf="@id/imageArtist"
            />


        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Artista: "
            android:layout_toRightOf="@id/textArtist"/>

        <TextView
            android:id="@+id/textListenersArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero de Reproduciones: "
            android:layout_toRightOf="@id/imageArtist"
            android:layout_below="@id/textArtist"
            />

        <TextView
            android:id="@+id/artistListeners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="numero"
            android:layout_toRightOf="@id/textListenersArtist"
            android:layout_below="@id/artistName"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>